  <script>
    // Función del contador regresivo
    function updateCountdown() {
      const targetDate = new Date('November 19, 2026 00:00:00').getTime();
      const now = new Date().getTime();
      const distance = targetDate - now;

      if (distance > 0) {
        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        document.getElementById('days')!.textContent = String(days).padStart(3, '0');
        document.getElementById('hours')!.textContent = String(hours).padStart(2, '0');
        document.getElementById('minutes')!.textContent = String(minutes).padStart(2, '0');
        document.getElementById('seconds')!.textContent = String(seconds).padStart(2, '0');
      } else {
        document.getElementById('days')!.textContent = '000';
        document.getElementById('hours')!.textContent = '00';
        document.getElementById('minutes')!.textContent = '00';
        document.getElementById('seconds')!.textContent = '00';
      }
    }

    // Actualizar cada segundo
    updateCountdown();
    setInterval(updateCountdown, 1000);
  </script>

<Layout>
<div class="main-wrapper">
    <!-- Elementos decorativos de fondo -->
    <div class="glow-circle-1"></div>
    <div class="glow-circle-2"></div>
    <div class="grid-pattern"></div>

    <!-- Contenido principal -->
    <div class="container">
      <div class="content">
        <!-- Sección de títulos -->
        <div class="title-section">
          <h1>Cuenta regresiva para
          <div class="date-wrapper">
            <span>Grand Theft Auto VI</span>
            <div class="date-glow"></div>
          </div>
		  </h1>
        </div>

        <!-- Grid de tarjetas de tiempo -->
        <div class="countdown-grid">
          <div class="time-card">
            <div class="corner-accent"></div>
            <div class="time-card-content">
              <div class="time-value" id="days">000</div>
              <div class="time-label">Días</div>
            </div>
          </div>

          <div class="time-card">
            <div class="corner-accent"></div>
            <div class="time-card-content">
              <div class="time-value" id="hours">00</div>
              <div class="time-label">Horas</div>
            </div>
          </div>

          <div class="time-card">
            <div class="corner-accent"></div>
            <div class="time-card-content">
              <div class="time-value" id="minutes">00</div>
              <div class="time-label">Minutos</div>
            </div>
          </div>

          <div class="time-card">
            <div class="corner-accent"></div>
            <div class="time-card-content">
              <div class="time-value" id="seconds">00</div>
              <div class="time-label">Segundos</div>
            </div>
          </div>
        </div>

        <!-- Línea decorativa inferior -->
        <div class="decorative-line">
          <div class="line"></div>
          <div class="dot"></div>
          <div class="line"></div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* --- ESTRUCTURA GENERAL --- */
  .main-wrapper {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 2rem 1rem;
  }


  @keyframes pulse-glow {
    0%, 100% {
      opacity: 0.5;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.1);
    }
  }

  .grid-pattern {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(251, 251, 251, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(251, 251, 251, 0.02) 1px, transparent 1px);
    background-size: 80px 80px;
    mask-image: radial-gradient(ellipse 80% 60% at 50% 50%, black, transparent);
    pointer-events: none;
  }

  /* --- CONTENEDOR CENTRAL --- */
  .container {
    position: relative;
    z-index: 10;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }

  .content {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  /* --- TÍTULOS --- */
  .title-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 0 1rem;
  }

  h1 {
    font-size: clamp(2rem, 5vw, 5rem);
    font-weight: 700;
    color: #fbfbfb;
    line-height: 1.1;
    text-align: center;
  }

  .date-wrapper {
    position: relative;
    display: inline-block;
  }

  span {
    font-size: clamp(2.5rem, 7vw, 6rem);
    font-weight: 700;
    color: rgba(255, 140, 66, 1);
    z-index: 1;
    position: relative;
  }

  .date-glow {
    position: absolute;
    inset: 0;
    background: rgba(255, 140, 66, 0.25);
    filter: blur(80px);
    z-index: -1;
  }

  /* --- GRID DEL CONTADOR --- */
  .countdown-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    .countdown-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 1.5rem;
    }
  }

  @media (min-width: 1200px) {
    .countdown-grid {
      gap: 2rem;
    }
  }

  /* --- TARJETAS DE TIEMPO --- */
  .time-card {
    position: relative;
    background: rgba(251, 251, 251, 0.05);
    backdrop-filter: blur(16px);
    border: 1px solid rgba(68, 68, 68, 0.5);
    border-radius: 0.75rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  @media (min-width: 768px) {
    .time-card {
      padding: 2rem;
    }
  }

  .time-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(255, 140, 66, 0.05);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .time-card:hover::before {
    opacity: 1;
  }

  .time-card:hover {
    border-color: rgba(255, 140, 66, 0.5);
  }

  .corner-accent {
    position: absolute;
    top: 0;
    right: 0;
    width: 3rem;
    height: 3rem;
    background: rgba(255, 140, 66, 0.1);
    border-bottom-left-radius: 100%;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .time-card:hover .corner-accent {
    opacity: 1;
  }

  .time-card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .time-value {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    font-family: 'Courier New', Courier, monospace;
    color: #fbfbfb;
    transition: color 0.3s ease;
  }

  .time-card:hover .time-value {
    color: rgba(255, 140, 66, 1);
  }

  .time-label {
    font-size: clamp(0.75rem, 2vw, 1rem);
    font-weight: 500;
    color: rgba(180, 180, 180, 1);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* --- DECORACIÓN FINAL --- */
  .decorative-line {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding-top: 2rem;
  }

  .line {
    width: clamp(3rem, 10vw, 6rem);
    height: 1px;
    background: rgba(255, 140, 66, 0.5);
  }

  .dot {
    width: 0.5rem;
    height: 0.5rem;
    background: rgba(255, 140, 66, 1);
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.2); }
  }

  /* --- DARK MODE MEJORADO --- */
  @media (prefers-color-scheme: dark) {
    body {
      background: radial-gradient(circle at 30% 30%, #0d0d0d, #000);
      color: white;
    }
  }
</style>
